<UserControl x:Class="Uslugi_application_user.CustomsControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uslugi_application_user.CustomsControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassword"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="Cyan"
                             BorderBrush="DarkCyan"
                             BorderThickness="0,0,0,2"
                             VerticalContentAlignment="Center">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/Uslugi_application_user;component/Images/passwordIcon.png"
                                        Stretch="None"
                                        AlignmentX="Right"/>
        </PasswordBox.Background>
    </PasswordBox>

</UserControl>
